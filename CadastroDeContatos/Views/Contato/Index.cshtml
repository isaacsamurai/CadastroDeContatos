@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">

    <h1 class="display-6">Listagem de contatos</h1>
    <div style="text-align: left;">
        <a hole="button" asp-controller="Contato" asp-action="Criar" class="btn btn-outline-success">Criar novo contato</a>
    </div>

    <table class="table">
        <thead>
             <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

             @if(Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {

            <tr>
                <th scope="row">@contato.Id</th>
                <td>@contato.Nome</td>
                <td>@contato.Email</td>
                <td>@contato.Celular</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a role="button" class="btn btn-outline-secondary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-outline-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
                }
            }
            </tbody>
    </table>
</div>

