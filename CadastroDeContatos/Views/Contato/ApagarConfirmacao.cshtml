@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de exclusão";
}

<div class="text-center">
    <h1 class="display-6">Deseja realmente apagar o contato "@Model.Nome"?</h1>
</div>

<br/>

<div class="text-center">
    <a class="btn btn-outline-danger" role="button" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar" >Confirmar exclusão</a>
    <a class="btn btn-outline-secondary" role="button" asp-controller="Contato" asp-action="Index" >Cancelar exclusão</a>
</div>

